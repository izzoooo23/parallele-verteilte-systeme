{
    "openapi": "3.0.0",
    "info": {
      "title": "Items API",
      "version": "1.0.0"
    },
    "paths": {
      "/api/items": {
        "get": { "summary": "Get all items", "responses": { "200": { "description": "List of items" } } },
        "post": { "summary": "Create a new item", "responses": { "201": { "description": "Item created" } } }
      },
      "/api/items/{id}": {
        "get": { "summary": "Get item by ID", "responses": { "200": { "description": "Item found" }, "404": { "description": "Item not found" } } },
        "delete": { "summary": "Delete item by ID", "responses": { "204": { "description": "Item deleted" } } }
      }
    }
  }
  